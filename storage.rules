rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Folder for event-related images, accessible only for reading to all users
    match /event_images/{allPaths=**} {
      allow read: if true; // Allow public read access to event images
      allow write: if request.auth != null && 
                     get(/databases/(default)/documents/Users/$(request.auth.uid)).data.role == 'staff'; // Correct database reference
    }

    // Default rule denying access to all other folders and paths unless specified
    match /{allOtherPaths=**} {
      allow read, write: if false; // Deny access to all other paths by default
    }
  }
}
